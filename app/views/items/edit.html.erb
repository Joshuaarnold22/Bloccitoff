<div class="container">
  <h2 class="media-heading">Edit your item <%= @user.name %></h2>
<%= form_for [current_user, @item] do |f| %>
   <div class="form-group">
     <!-- <%= f.label :name %> -->
     <br>
     <%= f.text_field :name, rows: 8, class: 'form-control', placeholder: "Enter item note" %>
   </div>
   <div class="form-group">
     <p>Select how many days you want this task up <%= f.select :time, 1..7 %></p>
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
<% end %>
</div>
